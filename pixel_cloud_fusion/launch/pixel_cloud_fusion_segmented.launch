    <remap from="image_rectified" to="forward_left_rect" />
    </node>

    <node name="forward_left_pixel_cloud_fusion" pkg="pixel_cloud_fusion" type="pixel_cloud_fusion" output="screen">
        <param name="points_src" value="/points_raw" />
        <param name="image_src" value="forward_left_rect" />
        <param name="camera_info_src" value="/carla/ego_vehicle/forward_left/camera_info" />
        <remap from="/points_fused" to="/forward_left_fused" />
