<launch>
    <node name="forward_center_autoware_image_rectifier" pkg="image_processor" type="image_rectifier" output="screen">
        <param name="image_src" value="/carla/ego_vehicle/forward_center/image" />
        <param name="camera_info_src" value="/carla/ego_vehicle/forward_center/camera_info" />
        <remap from="image_rectified" to="forward_center_rect" />
    </node>

    <node name="forward_center_pixel_cloud_fusion" pkg="pixel_cloud_fusion" type="pixel_cloud_fusion" output="screen">
        <param name="points_src" value="/points_raw" />
        <param name="image_src" value="forward_center_rect" />
        <param name="camera_info_src" value="/carla/ego_vehicle/forward_center/camera_info" />
        <remap from="points_fused" to="forward_center_fused" />
    </node>

    <node name="forward_left_autoware_image_rectifier" pkg="image_processor" type="image_rectifier" output="screen">
        <param name="image_src" value="/carla/ego_vehicle/forward_left/image" />
